{
    "name": "anime-prompt-gen/backend",
    "description": "Backend API for Anime Prompt Generator",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "illuminate/database": "^10.0",
        "illuminate/events": "^10.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0",
        "respect/validation": "^2.2",
        "ramsey/uuid": "^4.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "AnimePromptGen\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AnimePromptGen\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public/",
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 src/ tests/",
        "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
    }
}
